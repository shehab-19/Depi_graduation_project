@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<div class="container text-center py-5">
    <h1 class="display-3 fw-bold text-primary mb-3">QR Code Generator & Scanner</h1>
    <p class="lead text-muted">Easily generate and scan QR codes in seconds.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="d-flex justify-content-center gap-3">
                <a href="/QRCode/Generate" class="btn btn-primary btn-lg px-4 py-2 shadow">
                    <i class="fas fa-qrcode me-2"></i> Generate QR Code
                </a>
                <a href="/QRCode/Scan" class="btn btn-success btn-lg px-4 py-2 shadow">
                    <i class="fas fa-camera me-2"></i> Scan QR Code
                </a>
            </div>
        </div>
    </div>
</div>
