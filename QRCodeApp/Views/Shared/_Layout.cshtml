<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - QR Code App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- FontAwesome for icons -->
    <style>
        html, body {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
            background-color: #343a40 !important;
            padding: 0.75rem 1rem;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.75rem;
            color: #ffffff !important;
        }

        .navbar-toggler {
            border: none;
            padding: 0.5rem; 
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255, 255, 255, 0.8)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E"); /* Custom white toggler icon */
        }

        .nav-link {
            font-size: 1.1rem;
            font-weight: 500;
            color: rgba(255, 255, 255, 0.8) !important;
            margin: 0 0.75rem;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            transition: all 0.3s ease-in-out;
        }

            .nav-link:hover {
                color: #ffffff !important;
                background-color: rgba(255, 255, 255, 0.1);
            }

        .navbar-nav {
            align-items: center;
        }

        .container {
            flex: 1;
            max-width: 1200px;
        }

        footer {
            background-color: #343a40;
            color: rgba(255, 255, 255, 0.8);
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
            box-shadow: 0px -4px 12px rgba(0, 0, 0, 0.15);
        }

            footer p {
                margin: 0;
                font-size: 0.9rem;
            }
    </style>
</head>


<body class="bg-light">

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/logo.png" alt="Logo" width="40" height="40" class="me-2">
                QR Code App
            </a>            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/QRCode/Generate">
                            <i class="fas fa-qrcode"></i> Generate
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/QRCode/Scan">
                            <i class="fas fa-camera"></i> Scan
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/QRCode/History">
                            <i class="fas fa-history"></i> History
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 QR Code App. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>